<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center|top"
    android:background="#C6EFF6"
    android:layout_margin="20dp"
    android:layout_marginBottom="40dp"
    android:padding="5dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/list_place_img_all"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:minWidth="500dp"
        android:textAlignment="center"
        android:textColor="#084BBA"
        android:layout_height="wrap_content"
        android:id="@+id/list_place_name_all"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:hint="ITEM 1"/>

    <RatingBar
        android:isIndicator="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_place_val_all"></RatingBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comentar"
            android:background="@drawable/btn_fondo_color"
            android:layout_weight="3"
            android:id="@+id/list_place_btn_comment" />

        <Space
            android:layout_weight="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Space>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver comentarios"
            android:background="@drawable/btn_fondo_color"
            android:layout_weight="3"
            android:id="@+id/list_place_btn_comments_see" />
    </LinearLayout>


</LinearLayout>